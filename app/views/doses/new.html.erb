<div class="container">
  <h1>Add Doses to <%= @cocktail.name %></h1>
  <div class="row">
    <div class="col-sm-6">
      <%= simple_form_for([@cocktail, @dose]) do |f| %>
        <%= f.association :ingredient %>
          <%= f.input :description %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
